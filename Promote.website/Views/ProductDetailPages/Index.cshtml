@model IEnumerable<ProductDetailPage>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ImageHeader)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tab1Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tab2Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tab3Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailedDescriptionTitle)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ImageHeader)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tab1Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tab2Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tab3Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetailedDescriptionTitle)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
