@model ProductDetailPage

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    <div id="dismissable-alert" class="alert @(TempData["AlertClass"] ?? "") alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <script>
        $(document).ready(function () {
            window.setTimeout(function () {
                $("#dismissable-alert").alert('close');
            }, 5000); // 5000 milisaniye (5 saniye) sonra alert'ı otomatik olarak kapat
        });
    </script>
}
<h1>Create</h1>

<h4>ProductDetailPage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="ProductDetailPages" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ImageHeader" class="control-label"></label>
                <p><small style="color: #888; font-size: 14px;">2026 × 648 px boyutlarında bir görsel yükleyiniz.</small> </p>
                <input asp-for="ImageHeader" name="ImageHeader" type="file" class="form-control" />
                <span asp-validation-for="ImageHeader" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsTabSectionIncluded" class="control-label"></label>
                <select id="IsTabSectionIncluded" name="IsTabSectionIncluded" class="form-control">
                    <option value="true">Evet</option>
                    <option value="false">Hayır</option>
                </select>
                <span asp-validation-for="IsTabSectionIncluded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tab1Title" class="control-label"></label>
                <input asp-for="Tab1Title" class="form-control" />
                <span asp-validation-for="Tab1Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tab2Title" class="control-label"></label>
                <input asp-for="Tab2Title" class="form-control" />
                <span asp-validation-for="Tab2Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tab3Title" class="control-label"></label>
                <input asp-for="Tab3Title" class="form-control" />
                <span asp-validation-for="Tab3Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailedDescriptionTitle" class="control-label"></label>
                <input asp-for="DetailedDescriptionTitle" class="form-control" />
                <span asp-validation-for="DetailedDescriptionTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
