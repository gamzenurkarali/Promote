@model Promote.website.Models.ProductListPageViewModel
@{
    ViewData["Title"] = "ProductListPage";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}
@section Styles {
    <link rel="stylesheet" href="~/css/ProductList.css">
}

<section class="header-section">
    <div class="header-image-container">
        @if (Model != null && Model.productListPage != null && !string.IsNullOrEmpty(Model.productListPage.ImageHeader))
        {
            <img src="~/Media/@Model.productListPage.ImageHeader" alt="Banner Image">
        }
        else
        {
            <!-- Varsayılan görüntüyü kullanabilirsiniz -->
            <img src="~/DefaultMedia/Header.png" alt="Default Image">
        }

    </div>

    <div class="content">
        <!--Banner içindeki Link ve başlıklar-->
        <h1 style="font-weight: 300; font-size: 60px; line-height: 1.2; margin-bottom: 15px;">
            PRODUCTS
        </h1>
        <h4><a href="home.html">Home</a> > <a href="tours.html">Products</a></h4>
    </div>
</section>


<section class="products-section">

    <div class="row">

        @if (Model.products != null && Model.products.Any())
        {
            @foreach (var item in Model.products)
            {
                <div class="col-md-4 col-sm-6 col-xs-12">
                    <div class="card">
                        <div class="cover item-a" style="background-image: url('../Media/@item.ProductImageFileName');">
                            <h1>@item.ProductName</h1>
                            <!--Fotoğrafın arka yüzündeki link ve yazı-->
                            <div class="card-back">
                                <a href="/ProductPages/ProductDetailPage/@item.Id">View detail</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No products available.</p>
            <!-- Veya istediğiniz bir varsayılan içeriği ekleyebilirsiniz -->
        }



    </div>
</section>




