@model Promote.website.Models.ContactPage

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    <div id="dismissable-alert" class="alert @(TempData["AlertClass"] ?? "") alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <script>
        $(document).ready(function () {
            window.setTimeout(function () {
                $("#dismissable-alert").alert('close');
            }, 5000); // 5000 milisaniye (5 saniye) sonra alert'ı otomatik olarak kapat
        });
    </script>
}
<h1>Edit</h1>

<h4>ContactPage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContactPageId" />
            <div class="form-group">
                <label asp-for="ImageHeader" class="control-label"></label>
                <p><small style="color: #888; font-size: 14px;">2026 × 648 px boyutlarında bir görsel yükleyiniz.</small> </p>
                <input asp-for="ImageHeader" name="ImageHeader" class="form-control removeValue" type="file" id="imageHeaderInput" onchange="updateFileName('imageHeaderInput', 'imageHeaderName')" style="color:transparent;" />
                <span asp-validation-for="ImageHeader" class="text-danger"></span>
                <small id="imageHeaderName" class="form-text text-muted">@Model.ImageHeader</small>
            </div>
            <div class="form-group">
                <label asp-for="ContactInfoTitle" class="control-label"></label>
                <input asp-for="ContactInfoTitle" class="form-control" />
                <span asp-validation-for="ContactInfoTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactInfoDescription" class="control-label"></label>
                <input asp-for="ContactInfoDescription" class="form-control" />
                <span asp-validation-for="ContactInfoDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label"></label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MapIframeUrl" class="control-label"></label>
                <p><small style="color: #888; font-size: 14px;">Google Haritalar üzerinden kopyaladığınız iframe tagını buraya yapıştırınız.</small> </p>
                <input asp-for="MapIframeUrl" class="form-control" />
                <span asp-validation-for="MapIframeUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
