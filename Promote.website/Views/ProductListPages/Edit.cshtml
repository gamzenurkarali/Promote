@model Promote.website.Models.ProductListPage

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["Message"] != null)
{
    <div id="dismissable-alert" class="alert @(TempData["AlertClass"] ?? "") alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

    <script>
        $(document).ready(function () {
            window.setTimeout(function () {
                $("#dismissable-alert").alert('close');
            }, 5000); // 5000 milisaniye (5 saniye) sonra alert'ı otomatik olarak kapat
        });
    </script>
}
<h1>Edit</h1>

<h4>ProductListPage</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="ProductListPages" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ImageHeader" class="control-label"></label>
                <p><small style="color: #888; font-size: 14px;">2026 × 648 px boyutlarında bir görsel yükleyiniz.</small></p>
                <input asp-for="ImageHeader" name="ImageHeader" type="file" class="form-control" onchange="updateFileName('ImageHeader', 'imageHeaderFileName')" />
                <span asp-validation-for="ImageHeader" class="text-danger"></span>
                <small id="imageHeaderFileName" class="form-text text-muted">@Model.ImageHeader</small>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function updateFileName(inputId, outputId) {
            var input = document.getElementById(inputId);
            var output = document.getElementById(outputId);

            output.innerText = input.files.length > 0 ? input.files[0].name : "";
            input.nextElementSibling.style.color = "transparent";
        }
    </script>

}
