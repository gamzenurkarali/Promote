@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImageFileName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tab1Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tab2Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tab3Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailedDescriptionBgImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailedDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductImageFileName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tab1Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tab2Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tab3Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetailedDescriptionBgImage)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DetailedDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
