@model Product

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductImageFileName" class="control-label"></label>
                <input asp-for="ProductImageFileName" type="file" name="ProductImageFileName" class="form-control" />
                <span asp-validation-for="ProductImageFileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fee" class="control-label"></label>
                <input asp-for="Fee" class="form-control" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tab1Description" class="control-label"></label>
                <input asp-for="Tab1Description" class="form-control" />
                <span asp-validation-for="Tab1Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tab2Description" class="control-label"></label>
                <input asp-for="Tab2Description" class="form-control" />
                <span asp-validation-for="Tab2Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tab3Description" class="control-label"></label>
                <input asp-for="Tab3Description" class="form-control" />
                <span asp-validation-for="Tab3Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailedDescriptionBgImage" class="control-label"></label>
                <input asp-for="DetailedDescriptionBgImage" type="file" name="DetailedDescriptionBgImage" class="form-control" />
                <span asp-validation-for="DetailedDescriptionBgImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailedDescription" class="control-label"></label>
                <p><small style="color: #888; font-size: 14px;">Metin içinde '$/' iki karakterini ekledikten sonra yazdıklarınız başlık, '%/' iki karakterinden sonra yazdıklarınız madde olarak yazılır.</small> </p>
                <input asp-for="DetailedDescription" class="form-control" />
                <span asp-validation-for="DetailedDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
